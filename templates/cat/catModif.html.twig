{% extends 'base.html.twig' %}

{% block title %}
    {% if mode %}
        Modification
    {% else %}
        Création
    {% endif %}
{% endblock %}

{% block body %}
    <h1>
        {% if mode %}
            Modification d'une catégorie
        {% else %}
            Création d'une catégorie
        {% endif %}
    </h1>

    {{ form_start(formCat) }}
        {{ form_row(formCat.nom,{label: 'Nom' }) }}
        {{ form_row(formCat.description,{label: 'Description' }) }}   
        {% if mode %}
            <button type="submit" class="btn btn-outline-primary m-2">Modifier</button>
        {% else %}
            <button type="submit" class="btn btn-outline-primary m-2">Créer</button>
        {% endif %}
    {{ form_end(formCat) }}

{% endblock %}