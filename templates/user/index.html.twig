{% extends 'base.html.twig' %}

{% block title %}Les utilisateurs{% endblock %}

{% block body %}
    {% if users is not empty  %}
        <table class="table table-hover">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Prenom</th>
                <th scope="col">Adresse mail</th>
                <th scope="col">Statut</th>
                <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
            
                <tr class="table-active">
                    <th scope="row">{{user.id}}</th>
                    <td>{{user.nom}}</td>
                    <td>{{user.prenom}}</td>
                    <td>{{user.email}}</td>
                    <td>{{ user.roles ? user.roleStr}}</td>
                    <td>
                        <a class="btn btn-outline-info"href="#">info</a>
                    </td>
                    <td>
                        <a class="btn btn-outline-warning"href="#">Modifier</a>
                    </td>
                    <td>
                        <a class="btn btn-outline-danger"href="#">Supprimer</a> 
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
    <a class="btn btn-outline-primary" href="#">Ajouter un user</a>
    <a class="btn btn-outline-primary" href="{{path('home')}}">Retour accueil</a>
{% endblock %}
