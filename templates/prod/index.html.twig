{% extends 'base.html.twig' %}

{% block title %} Tous les produits{% endblock %}

{% block body %}

    <h1 class="text-center">Les produits</h1>

    {% for prod in produit %}

        <div class="card mb-3">
            <h3 class="card-header">{{prod.nom}}</h3>
            <div class="card-body">
                <h6 class="card-subtitle text-muted">Nouveauté {{prod.categorie.nom}}</h6>
            </div>
            <div>
                <img src="{{prod.picture}}" alt="">
                </div>
            <div class="card-body">
                <p class="card-text">{{ prod.description}}</p>
                <p>{{prod.prix}}{{'€'}}</p>
            </div>

            <div class="card-body">
                <a class="btn btn-outline-info" href="{{path('create')}}">Nouveau produit</a>
                <a class="btn btn-outline-primary" href="#">Ajouter au panier</a>
                <a class="btn btn-outline-warning" href="{{path('modify',{id:prod.id})}}">Modifier</a>
                <a class="btn btn-outline-danger" href="#">Supprimer</a>
            </div>
        </div>

    {% endfor %}

{% endblock %}
